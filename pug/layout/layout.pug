block variable
    -var path = '';
<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
        link(rel="stylesheet", type="text/css", href=path + "css/fancybox.min.css")
        link(rel="stylesheet", type="text/css", href=path + "css/aos.css")
        link(rel="stylesheet", type="text/css", href=path + "css/style.css")
    body
        .wrapper
            include header.pug

            main.main_content
                block content

            include footer.pug
            include modal.pug

            #preloader.preloader
                .preloader__content
                    .preloader__item.preloader__first
                    .preloader__item.preloader__second
                    .preloader__item.preloader__third

            script(src=path + "js/jquery.js")
            script(src=path + "js/form.js")
            script(src=path + "js/modal.js")
            script(src=path + "js/slick.min.js")
            script(src=path + "js/fancybox.min.js")
            script(src=path + "js/select2.min.js")
            script(src=path + "js/loadmore.js")
            script(src=path + "js/aos.js")
            script(src=path + "js/function.js?"+version+"")
