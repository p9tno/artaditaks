                    .messenger__list
                        .messenger__item
                            a(href="viber://chat?number=%2B375298075009" target="_blank").messenger__link
                                i.icon-viber
                        .messenger__item
                            a(href="https://wa.me/+375298075009" target="_blank").messenger__link
                                i.icon-whatsapp
                        .messenger__item
                            a(href="https://telegram.im/plahotin_s" target="_blank").messenger__link
