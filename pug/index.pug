extends layout/layout.pug

block content

    // begin firstScreen
    section#firstScreen.firstScreen.section
        .container_center
            h2.section__title 
                span Строительство <b>индивидуальных жилых домов</b> "под ключ в Бресте и области"
            .firstScreen__desc
                span От разбивки участка под заливку фундамента до ввода объекта в эксплуатацию

            .firstScreen__bullets
                .bullets
                    .bullets__item
                        .bullets__icon
                            i.icon-price
                        .bullets__content
                            span <b>Фиксируем цену в договоре</b> и разбиваем строительство на этапы

                    .bullets__item
                        .bullets__icon
                            i.icon-tool
                        .bullets__content
                            span <b>Закупаем материалы сами</b> или работаем с материалами заказчика


                    .bullets__item
                        .bullets__icon
                            i.icon-advise
                        .bullets__content
                            span <b>Советуем и подсказываем</b> как лучше

            .firstScreen__action
                .firstScreen__btn
                    a(href="#").btn.btn_lg.requisition_js
                        span Оставить заявку на расчет стоимости
                .firstScreen__info
                    span <b>Перезвоним и проконсультируем</b> через 5 минут
    // end firstScreen

    // begin services
    section#services.services.section
        .container_center
            .services__arrow
                //- <i class="icon-arrow_left"></i>
                //- <i class="icon-arrow_right"></i>
            h2.section__title 
                span Оказываем <b>полный спектр услуг</b> в строительстве
            .slider-info.mobile
                span Передвигайте разделы влево/вправо
                .slider-info-img
                    img(src="../img/hand.svg")
            //- .slider__arrows
            .slider.js-slider
                each item in [ {title: 'Кровельные работы любой сложности', bg: '1', decs: 'Подшива свесов кровли, водосточная система'}, {title: 'Внутренние и наружные отделочные работы', bg: '2', decs: 'Утепление фасадов, стяжка клеем, покраска, штукатурка песчаная, гипсовая'}, {title: 'Устройство коммуникаций', bg: '3', decs: 'водоснабжение, отопление, канализация, освещение'}, {title: 'Стяжка пола чистовая', bg: '4', decs: 'Подшива свесов кровли, водосточная система'}, {title: 'Устройство местной канализации', bg: '5', decs: 'Без откачки до 15 лет'}, {title: 'Благоустройство территории', bg: '6', decs: 'Проектирование, ландшафтный дизайн, посадка растений, системы полива, укладка тротуарной плитки'}, {title: 'Монтаж заборов, калиток, ворот', bg: '7', decs: 'Откатные, распашные'}, {title: 'Сдача в аренду строительной техники', bg: '8', decs: 'Перечисление техники, списком через запятую'}, ]
                    .slider__item
                        .services__item(style="background-image: url('../img/services_"+item.bg+".webp')")
                            .services__content
                                .services__top
                                    .services__title
                                        //- span Проектирование
                                        span Благоустройство 
                                        br 
                                        span территории
                                .services__bottom
                                    .services__desc
                                        span=item.decs
                                    .services__action
                                        a(href="#").btn Оставить заявку
                                        a.services__link(href="#") Скачать прайс

    // end services

    // begin priceList
    section#priceList.priceList.section
        .priceList__fon
        .container_center
            .priceList__content
                h2.priceList__title 
                    span <b>Скачайте<br> прайс-лист</b> на все услуги в 1 клик
                .priceList__desc
                    span Выберите куда вам удобнее отправить прайс?
                .priceList__form
                    form.form.form_grid(action="send.php")
                        //- из какой формы на сайте
                        input(type="hidden" name="subject" value="Скачать прайс лист")
                        //- проверка спама
                        input(type="hidden" name="notspam" value="")

                        .form__row
                            select.select(data-placeholder="Получить в Viber" name="select")
                                option(value="")
                                option(value="Viber") Получить в Viber
                                option(value="Telegram") Получить в Telegram
                                option(value="whatsapp") Получить в Whatsapp

                        .form__row
                            input(type="tel" id="tel" name="tel" required placeholder="+375 ( _ _ ) _ _ _ - _ _ - _ _")

                        .form__row
                            button.btn.btn_didisabled_js(type="submit")
                                span Получить прайс сейчас

                        .form__row.form__row_full
                            .form__privacy
                                label.form__check
                                    input.check_checked_js(type="checkbox" checked="checked")
                                    span Нажимая кнопку вы соглашаетесь  с условиями <a href="#" target="_blank">Политики конфиденциальности</a>

                .priceList__pdf
                    .pdf
                        img(src="../img/pdf.svg")

        .priceList__compass.desktop

    // end priceList

    // begin house
    section#house.house.section
        .container_center
            h2.section__title 
                span <b>Построили</b> 31 дом под ключ в Бресте
            .house__desc 
                span От разбивки участка до новоселья
            .house__content
                each item in [1,2,3,4]

                    .house__item
                        .house__gallery
                            .gallery
                                each item in [1,2,3,4,5]
                                    .gallery__item
                        .house__title
                            span Название работы
                        .house__subtitle
                            span Описание работы - цена - сроки - место выполнения (проведения) можно добавить еще и отзыв клиенты или видеообзор сюда же

                .house__action
                    a(href="#") Показать еще работы


